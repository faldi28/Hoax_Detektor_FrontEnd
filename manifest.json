{
  "manifest_version": 3,
  "name": "Detektor Berita Hoax",
  "version": "1.0",
  "description": "Mendeteksi berita hoax pada halaman web berbahasa Indonesia menggunakan model AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "Readability.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}